<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC6C6"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:background="#CDC9C9"
        android:layoutDirection="ltr"
        android:tint="#000000"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="#CDC9C9"
        android:tint="#434242"
        app:srcCompat="@android:drawable/ic_dialog_dialer"
        tools:layout_editor_absoluteX="349dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="284dp"
        android:layout_height="41dp"
        android:shadowColor="#656565"
        android:text="حول التطبيق "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="17dp" />

    <View
        android:id="@+id/view"
        android:layout_width="366dp"
        android:layout_height="265dp"
        android:background="#A6A3A3"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="321dp"
        android:layout_height="210dp"
        android:text='تطبيق لجهات التدريب و هو إحدى المبادرات التي تسعى لتطوير قدرات و رفع مهارات القوى الوطنية من الذكور و الإناث , وإكسابهم المهارات الوظيفية التي تدعم حصولهم على الوظيفة المناسبة والاستقرار فيها وفق متطلبات سوق العمل السعودي, ويحتوي تطبيق "تواق" على العديد من البرامج التدريبية و المسارات التطوعية لموضوعات متنوعة تلبي الاحتياجات الوظيفية ,يمكن الوصول لها في أي وقت ومن كل مكان '
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="352dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="261dp"
        android:layout_height="218dp"
        app:srcCompat="@drawable/screenshot_1442_03_22_at_7_30_59_pm"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="82dp" />
</androidx.constraintlayout.widget.ConstraintLayout>